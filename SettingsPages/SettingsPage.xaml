<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Church_Demo.SettingsPages.SettingsPage"
             Title="Settings">
    <ContentPage.Content>
        <Grid>
            <Image Source="officialbackground.jpg" Aspect="AspectFit"/>
            <StackLayout Margin="10" Spacing="10">
                <Frame x:Name="NameFrame" BorderColor="Black">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Label x:Name="NameLbl" FontSize="Medium" VerticalTextAlignment="Center" VerticalOptions="Center"/>
                        <Button x:Name="ChangeNameBtn" Text="Change Name" Clicked="ChangeNameBtn_Clicked" VerticalOptions="Center" BorderColor="Black" BorderWidth="2" Scale=".8"/>
                    </StackLayout>
                </Frame>
                <Frame x:Name="AdminFrame" BorderColor="Black">
                    <StackLayout Spacing="10">
                        <Button Text="Management Code" Clicked="ManagementCodeBtn_Clicked"/>
                        <Label x:Name="AdminCodeLbl" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
