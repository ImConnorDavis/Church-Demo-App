<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Church_Demo.PrayerPages.ViewPrayerPage"
             Title="ViewPrayerPage">
    <ContentPage.Content>
        <Grid>
            <Image Source="officialbackground.jpg" Aspect="AspectFill"/>
            <StackLayout VerticalOptions="FillAndExpand" Margin="10" Spacing="10">
                <Frame x:Name="PrayerNameFrame" BorderColor="Black">
                    <Label x:Name="NameLbl" FontSize="Title" HorizontalOptions="Center"/>
                </Frame>
                <Frame x:Name="PrayerContentsFrame" BorderColor="Black">
                    <Label x:Name="PrayerContentsLbl" HorizontalOptions="Center"/>
                </Frame>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
