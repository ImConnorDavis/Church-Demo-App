             x:Class="Church_Demo.AdminPages.AdminPage"
             Title="Admin">
    <ContentPage.Content>
        <Grid>
            <Image Source="officialbackground.jpg" Aspect="AspectFill"/>
            <StackLayout Margin="10">
                <Button x:Name="PostNewsSelectionPageBtn" Clicked="PostNewsSelectionPageBtn_Clicked" Text="Create News Post" BorderColor="Black" BorderWidth=".25" TextColor="Black" Margin="0,0,0,10" FontSize="Title"/>
